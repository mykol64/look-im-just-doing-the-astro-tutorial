---
const { platform, username } = Astro.props;
---

{ platform === "bluesky" ? <a href={`https://bsky.app/profile/${username}`} target="_blank">{platform}</a> : <a href={`https://${platform}.com/${username}`} target="_blank">{platform}</a> }

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>